<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Task</th>
      <th>Status</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="<%= task.task_completed ? 'table-success' : '' %>">
        <td class="<%= task.task_completed ? 'striker' : '' %>"><%= task.task_name %></td>
        <td><%= task.task_completed ? 'Done' : 'Yet to be done' %></td>
        <td colspan="3"><%= link_to 'Details', task, class: "btn btn-secondary" %> <%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning" %> <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: 'btn btn-secondary' %>
